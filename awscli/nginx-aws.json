{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "{{user `region`}}",
            "source_ami": "{{user `base_ami`}}",
            "instance_type": "{{user instance_size}}",
            "ami_name": "my_awesome-ami-for-aws-test",
            "ssh_username": "ubuntu",
            "ssh_timeout": "20m",
            "tags": {
                "Project": "Devops",
                "ami_type": "nginx",
                "OS": "ubuntu_2204",
                "BuildBy": "Packer"
            }
        }
    ],
    "description": "AWS image",
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install -y git nginx"
        ]
    ,}
